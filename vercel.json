{
  "rewrites": [
    { 
      "source": "/api/orders/(.*)", 
      "destination": "/api/orders/create" 
    }
  ],
  "redirects": [
    { 
      "source": "/", 
      "destination": "/courses", 
      "permanent": true 
    }
  ],
  "headers": [
    {
      "source": "/api/orders/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
